public void handleMessage()
{
   switch (message.getMessageId())
   {
      case "msgUP":
      {
         boolean isPressed = Boolean.valueOf(message.getPayload("isPressed"));
         up(isPressed);
         break;
      }
      
      case "msgDOWN":
      {
         boolean isPressed = Boolean.valueOf(message.getPayload("isPressed"));
         up(isPressed);
         break;
      }
      
      case "msgLEFT":
      {
         boolean isPressed = Boolean.valueOf(message.getPayload("isPressed"));
         up(isPressed);
         break;
      }
      
      case "msgRIGHT":
      {
         boolean isPressed = Boolean.valueOf(message.getPayload("isPressed"));
         up(isPressed);
         break;
      }
      
      default:
      {
         break;
      }
   }
}


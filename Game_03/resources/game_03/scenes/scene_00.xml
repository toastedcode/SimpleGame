<?xml version="1.0" encoding="UTF-8"?>
<scene id="scene_00">
   <dimension width="1024" height="575"/>
   <camera id="camera"/>
   <actors>
      <camera id="camera">
          <dimension width="512" height="575"/>
          <followActor id="player" isFollowing="true" followSpeed="0"/>
      </camera>
	   <actor id="background_00">
	      <properties>
	         <image id="imgBackground" resource="background.png"/>
	      </properties>
	   </actor>
	   <character id="player">
	      <position x="0" y="400"/>
	      <properties>
	         <script id="playerScript" resource="player.bsh"/>
	         <script id="saveGameScript" resource="saveGame.bsh"/>
	         <mailbox id="mailbox">
	            <message id="msgKEY_PRESSED"/>
	            <message id="msgKEY_RELEASED"/>
	         </mailbox>
	         <animationGroup id="characterAnimations">
	            <currentAnimation id="idle_down" direction="FORWARD" type="LOOP"/>
	            <!--  Idle animations -->
	            <animation id="idle_right" imageResource="werebear.png" animationResource="werebear.anim" frameRate="50"/>
	            <animation id="idle_left" imageResource="werebear.png" animationResource="werebear.anim"  frameRate="50"/>
	            <animation id="idle_up" imageResource="werebear.png" animationResource="werebear.anim"  frameRate="50"/>
	            <animation id="idle_down" imageResource="werebear.png" animationResource="werebear.anim"  frameRate="50"/>
	            <!--  Walk animations -->
		         <animation id="walk_right" imageResource="werebear.png" animationResource="werebear.anim"  frameRate="50"/>
		         <animation id="walk_left" imageResource="werebear.png" animationResource="werebear.anim"  frameRate="50"/>
		         <animation id="walk_up" imageResource="werebear.png" animationResource="werebear.anim"  frameRate="50"/>
		         <animation id="walk_down" imageResource="werebear.png" animationResource="werebear.anim"  frameRate="50"/>
	         </animationGroup>
	         <keyMap id="keyMap">
	            <key keyChar="s" messageId="msgSAVE"/>
	            <key keyChar="l" messageId="msgLOAD"/>
	            <key keyId="37" messageId="msgLEFT"/>
	            <key keyId="39" messageId="msgRIGHT"/>
	            <key keyId="38" messageId="msgUP"/>
	            <key keyId="40" messageId="msgDOWN"/>
	         </keyMap>
	         <motor id="motor">
	            <keyMap>
	               <key keyId="37">LEFT</key>
	               <key keyId="39">RIGHT</key>
	               <key keyId="38">UP</key>
	               <key keyId="40">DOWN</key>
	            </keyMap>
	         </motor>
	      </properties>
	      <states>
	         <state id="walk_right"/>
	         <state id="walk_left"/>
	         <state id="idle_left"/>
	         <state id="idle_right"/>
	      </states>
	      <state>idle_right</state>
	   </character>
	</actors>
</scene>